{
  "name": "@fastify/backend",
  "version": "1.0.0",
  "description": "Backend API for Storagie",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:e2e": "NODE_ENV=test jest --config jest.e2e.config.js",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:docker": "docker compose exec api pnpm test",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "commit": "cz",
    "validate": "pnpm type-check && pnpm lint && pnpm test:ci",
    "prebuild": "pnpm clean && pnpm validate",
    "deps:check": "pnpm dlx npm-check-updates",
    "deps:update": "pnpm dlx npm-check-updates -u && pnpm install",
    "jest:clear": "jest --clearCache",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f api",
    "docker:shell": "docker compose exec api sh",
    "docker:test:up": "docker compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker compose -f docker-compose.test.yml down",
    "docker:clean": "docker compose down -v --remove-orphans",
    "clean": "rm -rf dist coverage .tsbuildinfo",
    "clean:all": "pnpm clean && rm -rf node_modules"
  },
  "keywords": [
    "fastify",
    "typescript",
    "api",
    "assets",
    "digital-library",
    "clean-architecture"
  ],
  "author": {
    "name": "Storagie Team",
    "email": "admin@storagie.com",
    "url": "https://storagie.com"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "@eslint/js": "^9.30.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.11.1",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.56.1",
    "dotenv": "^17.0.1",
    "fastify": "^5.4.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.4",
    "zod": "^3.25.71",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "prisma": "^6.11.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
